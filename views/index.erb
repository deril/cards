<ul>
  <% @cards.each do |card| %>
    <% if params[:flip] == card[:id] %>
      <% href = "/" %>
      <% text = card[:back] %>
    <% else %>
      <% href = "/?flip=#{card[:id]}" %>
      <% text = card[:middle] %>
    <% end %>
    <li><%= card[:left] %><a href=<%= href %>><%= text %></a><%= card[:right] %></li>
  <% end %>
</ul>

<form action="/cards" method="post">
  Front: <input type="text" name="front">
  Back: <input type="text" name="back">
  <input type="submit" value="Submit">
</form>
