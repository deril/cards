<ul>
  <% @cards.each do |card| %>
    <% if params[:flip] == card[:id] %>
      <% href = "/" %>
      <% text = card[:back] %>
    <% else %>
      <% href = "/?flip=#{card[:id]}" %>
      <% text = card[:middle] %>
    <% end %>
    <li>
      <form action="/cards/<%= card[:id] %>" method="post" style="display: inline">
	<input type="hidden" name="_method" value="delete"/>
	<input value="Delete" type="submit"/>
      </form>
      <%= card[:left] %><a href=<%= href %>><%= text %></a><%= card[:right] %>
    </li>
  <% end %>
  <li>
    <form action="/cards" method="post">
      Front side: <input type="text" name="front" placeholder="Enjoy *life*.">
      Translation: <input type="text" name="back" placeholder="жизнь">
      <input type="submit" value="Add">
    </form>
  </li>
</ul>
